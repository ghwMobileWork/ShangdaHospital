            SELECT `yuyue`.*, doctor.id as d_id,doctor.doctor_name, doctor.department
            FROM `yuyue`
                     left JOIN doctor on doctor.id = `yuyue`.doctor_id

        </select>
    <select id="findPage" resultMap="YuyueMap">
